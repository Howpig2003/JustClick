@model JustClick.Models.ClickCounter.ClickCounter
@{
    ViewData["Title"] = "點擊計數器";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">點擊計數器</h1>
        <div class="card text-center mt-4">
            <div class="card-body">
                <h5 class="card-title">總點擊次數</h5>
                <p class="card-text">當前點擊次數: <span id="totalClickCount" class="font-weight-bold">@Model.TotalClickCount</span></p>
                <p class="card-text">最後點擊時間: @Model.LastClickTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <button id="clickButton" class="btn btn-primary btn-lg">點擊我</button>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#clickButton").click(function () {
                    $.ajax({
                        url: '@Url.Action("RecordClick", "Click")',
                        type: 'POST',
                        dataType: 'json',
                        success: function (data) {
                            if (data.success) {
                                $("#totalClickCount").text(data.totalClickCount);
                            } else {
                                alert(data.message);
                            }
                        },
                        error: function () {
                            alert("發生錯誤，請稍後再試");
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>